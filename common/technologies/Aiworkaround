technologies = { 
#These technologies are there to stop a script that forces Ai to upgrade tanks, if you change them the script might break and AI will stop producing the tank type.
#Med Tanks

	update_med_armor = {

		dependencies = {improved_medium_tank = 1}
		path = {
			leads_to_tech = update_med_armor2
			research_cost_coeff = 1}

		research_cost = 0.1
		start_year = 1007
		folder = {
			name = infantry_folder
			position = {  x = 1 y = 0 }}
		categories = {AI_Script}
		
			ai_will_do = {factor = 0
				modifier = {
				origional_tag = CHN
				add = 10000
			}
			}
			}




